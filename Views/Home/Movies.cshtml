@model UserXMovies
@{
    ViewData["Title"] = "Movies";
}


<h1>Welcome @Model.User.Name Here the list of your movies</h1>
<p class="lead">
    If you want to add a new movie, choose a bucket below and click send afterwards.
</p>
<div>
    <a asp-action="AddMovie" asp-route-email="@Model.User.Email">Add Movies</a>
   

</div>

<div>


</div>


<table class="table">
    <thead>
        <tr>
            <th>Title<th>
            <th>#<th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    <img src="@item.Cover.GetPreSignedURL(DateTime.Now.AddHours(1))" 
                         width="500" 
                         height="600">
                 
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <a asp-action="MovieDetails" asp-route-email="@Model.User.Email"
                            asp-route-movieId="@item.Id" >Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

