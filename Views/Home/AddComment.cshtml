@model MovieXRating
@{
    ViewData["Title"] = "AddComment";
}

<h2>Add Comment Page</h2>



<form asp-action="AddComment" method="post">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Type your comment here</span>
        </div>
        <textarea name="comment" value="@Model.Rating.Comment" class="form-control" aria-label="With textarea"></textarea>
    </div>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Type your rate from 1 to 10</span>
        </div>
        <textarea name="rate" value="@Model.Rating.Rate" class="form-control" aria-label="With textarea"></textarea>
    </div>
     <input type="hidden" name="email" value="@Model.User.Email" />
    <input type="hidden" name="movieId" value="@Model.Movie.Id" />
    <button type="Submit"></button>
</form>

 



