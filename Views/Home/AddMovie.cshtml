@model BucketsXMovie
@{
    ViewData["Title"] = "Add Movie";
}

<h2>Create</h2>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMovie" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Movie.Id" />
            <input type="hidden" asp-for="@Model.Email" />
            <div class="form-group">
                <label asp-for="@Model.Movie.Title" class="control-label"></label>
                <input asp-for="@Model.Movie.Title" class="form-control" />
                <span asp-validation-for="@Model.Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cover" class="control-label"></label>
                <input type="file" asp-for="@Model.Cover" class="form-control" accept="image/jpeg" />
                <span asp-validation-for="@Model.Cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Video" class="control-label"></label>
                <input type="file" asp-for="@Model.Video" class="form-control" accept="video/avi" />
                <span asp-validation-for="@Model.Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="custom-select" asp-for="@Model.SelectedBucket" asp-items="@(new SelectList(Model.Buckets))">
                    <option>Chooose one</option>

                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

